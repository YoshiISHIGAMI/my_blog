<div class="col-md-8 col-md-offset-2">
<div class="form-group">
  <h2>新規記事作成</h2>
  <%= form_for @post do |f| %>
  <p>タイトル:<br>
  <%= f.text_field :title, :class => 'form-control' %>
  </p>

  <p>記事:<br>
  <%= f.text_area :body, :class => 'form-control input-lg' %>
  </p>

  <p>カテゴリ:<br>
  <%= f.collection_select(:category_id, Category.all, :id, :title, class: "form-control") %>
  </p>

  <p class="text-center"><%= f.submit '記事を保存', :class => 'btn btn-default' %></p>
  <% end %>
</div>
</div>
