<div class="col-md-8">
<% @posts.each do |post| %>
    <article>
      <h2><%= post.title %></h2>
      <p>
        <%= truncate(post.body, :length => 50) %>
      </p>
      <p>
      <%= link_to "続きを読む", post_path(post.id), :class => "btn btn-default" %>
      </p>
    </article>
<% end %>
<%= paginate @posts %>
</div>

<div class="col-md-4">
  <div class="thumbnail">
    <% author = Author.first %>
  <img src="<%= author.image_url %>" alt="" class="img-responsive">
  <div class="caption">
    <h3><%= author.name %></h3>
    <p><%= author.description %></p>
  </div>
  </div>
  
  <ul class="list-group">
    <% @posts.each_with_index do |post, index| %>
    <% if index >= 5
       break
     end
    %>
    <li class="list-group-item">
      <a href="/posts/<%= post.id %>"><%= post.title %></a>
    </li>
    <% end %>
  </ul>
</div>
